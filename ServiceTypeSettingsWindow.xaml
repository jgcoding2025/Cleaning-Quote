<Window x:Class="Cleaning_Quote.ServiceTypeSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Service Type Defaults" Height="820" Width="720" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <x:Array x:Key="RoomTypeOptions" Type="{x:Type sys:String}">
            <sys:String>Bedroom</sys:String>
            <sys:String>Bathroom</sys:String>
            <sys:String>Kitchen</sys:String>
            <sys:String>Living Room</sys:String>
            <sys:String>Dining Room</sys:String>
            <sys:String>Office</sys:String>
            <sys:String>Laundry</sys:String>
            <sys:String>Family Room</sys:String>
            <sys:String>Entry</sys:String>
            <sys:String>Hallway</sys:String>
            <sys:String>Garage</sys:String>
            <sys:String>Other</sys:String>
        </x:Array>
        <x:Array x:Key="LevelOptions" Type="{x:Type sys:String}">
            <sys:String>Basement</sys:String>
            <sys:String>Main Floor (1)</sys:String>
            <sys:String>Upstairs (2)</sys:String>
            <sys:String>Floor 3</sys:String>
            <sys:String>Floor 4</sys:String>
            <sys:String>Floor 5</sys:String>
        </x:Array>
        <x:Array x:Key="RoomSizeOptions" Type="{x:Type sys:String}">
            <sys:String>S</sys:String>
            <sys:String>M</sys:String>
            <sys:String>L</sys:String>
        </x:Array>
        <x:Array x:Key="ComplexityOptions" Type="{x:Type sys:Int32}">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
        </x:Array>
        <x:Array x:Key="SubItemTypeOptions" Type="{x:Type sys:String}">
            <sys:String>Full Glass Shower</sys:String>
            <sys:String>Pebble Stone Floor</sys:String>
            <sys:String>Fridge</sys:String>
            <sys:String>Oven</sys:String>
            <sys:String>Ceiling Fan</sys:String>
            <sys:String>Standard Window - 2 panes</sys:String>
        </x:Array>
        <x:Array x:Key="WindowSizeOptions" Type="{x:Type sys:String}">
            <sys:String>S</sys:String>
            <sys:String>M</sys:String>
            <sys:String>L</sys:String>
        </x:Array>
    </Window.Resources>
    <DockPanel Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Service Type" FontWeight="SemiBold" />
                    <ComboBox x:Name="ServiceTypeBox" Height="28" SelectionChanged="ServiceTypeBox_SelectionChanged">
                        <ComboBoxItem>Standard Clean</ComboBoxItem>
                        <ComboBoxItem>Initial Clean</ComboBoxItem>
                        <ComboBoxItem>Deep Clean</ComboBoxItem>
                        <ComboBoxItem>Light Clean</ComboBoxItem>
                        <ComboBoxItem>Move in/out Clean</ComboBoxItem>
                        <ComboBoxItem>Pressure Washing</ComboBoxItem>
                        <ComboBoxItem>Organizing</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <GroupBox Header="Room Defaults" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <WrapPanel>
                            <StackPanel Width="180" Margin="0,0,10,0">
                                <TextBlock Text="Room Type" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomTypeBox" Height="26" ItemsSource="{StaticResource RoomTypeOptions}"/>
                            </StackPanel>
                            <StackPanel Width="180" Margin="0,0,10,0">
                                <TextBlock Text="Level" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomLevelBox" Height="26" ItemsSource="{StaticResource LevelOptions}"/>
                            </StackPanel>
                            <StackPanel Width="90" Margin="0,0,10,0">
                                <TextBlock Text="Size" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomSizeBox" Height="26" ItemsSource="{StaticResource RoomSizeOptions}"/>
                            </StackPanel>
                            <StackPanel Width="120">
                                <TextBlock Text="Complexity" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomComplexityBox" Height="26" ItemsSource="{StaticResource ComplexityOptions}"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Sub-Item Defaults" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <WrapPanel>
                            <StackPanel Width="220" Margin="0,0,10,0">
                                <TextBlock Text="Sub-Item Type" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultSubItemTypeBox" Height="26" ItemsSource="{StaticResource SubItemTypeOptions}"/>
                            </StackPanel>
                            <StackPanel Width="120">
                                <TextBlock Text="Window Size" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultWindowSizeBox" Height="26" ItemsSource="{StaticResource WindowSizeOptions}"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Default Pricing Settings" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="160" Margin="0,0,10,0">
                                <TextBlock Text="Sq Ft per Labor Hour" FontWeight="SemiBold"/>
                                <TextBox x:Name="SqFtPerLaborHourBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Small Sq Ft" FontWeight="SemiBold"/>
                                <TextBox x:Name="SizeSmallSqFtBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Medium Sq Ft" FontWeight="SemiBold"/>
                                <TextBox x:Name="SizeMediumSqFtBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Large Sq Ft" FontWeight="SemiBold"/>
                                <TextBox x:Name="SizeLargeSqFtBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Complexity 1x" FontWeight="SemiBold"/>
                                <TextBox x:Name="Complexity1MultiplierBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Complexity 2x" FontWeight="SemiBold"/>
                                <TextBox x:Name="Complexity2MultiplierBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Complexity 3x" FontWeight="SemiBold"/>
                                <TextBox x:Name="Complexity3MultiplierBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Glass Shower Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="FullGlassShowerHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Glass Shower Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="FullGlassShowerComplexityBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Pebble Floor Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="PebbleStoneFloorHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Pebble Floor Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="PebbleStoneFloorComplexityBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Fridge Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="FridgeHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Fridge Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="FridgeComplexityBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Oven Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="OvenHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Oven Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="OvenComplexityBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Sub-Item Labor Defaults" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Ceiling Fan Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="CeilingFanHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Ceiling Fan Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="CeilingFanComplexityBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                        <WrapPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Small Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowSmallHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Medium Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowMediumHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Large Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowLargeHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowComplexityBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Quote Form Rates" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="First Clean Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="FirstCleanRateBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="First Clean Minimum" FontWeight="SemiBold"/>
                                <TextBox x:Name="FirstCleanMinimumBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Deep Clean Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="DeepCleanRateBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Deep Clean Minimum" FontWeight="SemiBold"/>
                                <TextBox x:Name="DeepCleanMinimumBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Maintenance Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="MaintenanceRateBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Maintenance Minimum" FontWeight="SemiBold"/>
                                <TextBox x:Name="MaintenanceMinimumBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="160" Margin="0,0,10,0">
                                <TextBlock Text="One-Time Deep Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="OneTimeDeepCleanRateBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="160" Margin="0,0,10,0">
                                <TextBlock Text="One-Time Deep Min" FontWeight="SemiBold"/>
                                <TextBox x:Name="OneTimeDeepCleanMinimumBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                        <WrapPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Inside Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowInsideRateBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Outside Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowOutsideRateBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Complexity Definitions" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Complexity 1" FontWeight="SemiBold" />
                            <TextBox x:Name="Complexity1DefinitionBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Complexity 2" FontWeight="SemiBold" />
                            <TextBox x:Name="Complexity2DefinitionBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Complexity 3" FontWeight="SemiBold" />
                            <TextBox x:Name="Complexity3DefinitionBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset to Default" Width="130" Margin="0,0,8,0" Click="ResetToDefault_Click" />
                    <Button Content="Save" Width="90" Margin="0,0,8,0" Click="Save_Click" />
                    <Button Content="Close" Width="90" Click="Close_Click" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
