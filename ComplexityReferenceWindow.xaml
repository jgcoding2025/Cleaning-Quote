<Window x:Class="Cleaning_Quote.ComplexityReferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Complexity Reference" Height="520" Width="600" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <StackPanel>
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Service Type" FontWeight="SemiBold" />
                <ComboBox x:Name="ServiceTypeBox" Height="28" SelectionChanged="ServiceTypeBox_SelectionChanged">
                    <ComboBoxItem>Standard Clean</ComboBoxItem>
                    <ComboBoxItem>Initial Clean (Standard Clean Items Only)</ComboBoxItem>
                    <ComboBoxItem>Deep Clean (one-time)</ComboBoxItem>
                    <ComboBoxItem>Deep Clean (post initial clean)</ComboBoxItem>
                    <ComboBoxItem>Deep Clean (Semi-Annual)</ComboBoxItem>
                    <ComboBoxItem>Deep Clean (Annual)</ComboBoxItem>
                    <ComboBoxItem>Light Clean (dusting and floors)</ComboBoxItem>
                    <ComboBoxItem>Move In/Out Clean</ComboBoxItem>
                    <ComboBoxItem>Pressure Washing</ComboBoxItem>
                    <ComboBoxItem>Organizing</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <GroupBox Header="Complexity 1" Margin="0,0,0,10">
                <TextBlock x:Name="Complexity1DefinitionText" Margin="10" TextWrapping="Wrap" />
            </GroupBox>

            <GroupBox Header="Complexity 2" Margin="0,0,0,10">
                <TextBlock x:Name="Complexity2DefinitionText" Margin="10" TextWrapping="Wrap" />
            </GroupBox>

            <GroupBox Header="Complexity 3">
                <TextBlock x:Name="Complexity3DefinitionText" Margin="10" TextWrapping="Wrap" />
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Close" Width="90" Click="Close_Click" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
