<Window x:Class="Cleaning_Quote.ServiceTypeSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Service Type Defaults" Height="940" Width="980" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <x:Array x:Key="RoomTypeOptions" Type="{x:Type sys:String}">
            <sys:String>Bathroom (Full)</sys:String>
            <sys:String>Bathroom (Half)</sys:String>
            <sys:String>Bathroom (Master - 2 sinks, glass/stone shower)</sys:String>
            <sys:String>Bedroom</sys:String>
            <sys:String>Bedroom (Master)</sys:String>
            <sys:String>Kitchen</sys:String>
            <sys:String>Living Room</sys:String>
            <sys:String>Dining Room</sys:String>
            <sys:String>Office</sys:String>
            <sys:String>Laundry</sys:String>
            <sys:String>Family Room</sys:String>
            <sys:String>Entry</sys:String>
            <sys:String>Hallway</sys:String>
            <sys:String>Garage</sys:String>
            <sys:String>Other</sys:String>
        </x:Array>
        <x:Array x:Key="LevelOptions" Type="{x:Type sys:String}">
            <sys:String>Basement</sys:String>
            <sys:String>Main Floor (1)</sys:String>
            <sys:String>Upstairs (2)</sys:String>
            <sys:String>Floor 3</sys:String>
            <sys:String>Floor 4</sys:String>
            <sys:String>Floor 5</sys:String>
        </x:Array>
        <x:Array x:Key="RoomSizeOptions" Type="{x:Type sys:String}">
            <sys:String>S</sys:String>
            <sys:String>M</sys:String>
            <sys:String>L</sys:String>
        </x:Array>
        <x:Array x:Key="ComplexityOptions" Type="{x:Type sys:Int32}">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
        </x:Array>
        <x:Array x:Key="WindowSizeOptions" Type="{x:Type sys:String}">
            <sys:String>S</sys:String>
            <sys:String>M</sys:String>
            <sys:String>L</sys:String>
        </x:Array>
    </Window.Resources>
    <DockPanel Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Service Type Standards" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <DataGrid x:Name="ServiceTypeStandardsGrid"
                                  Height="180"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Service Type" Binding="{Binding ServiceType}" IsReadOnly="True" Width="2*"/>
                                <DataGridTextColumn Header="Rate (per sq ft)" Binding="{Binding Rate, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                                <DataGridTextColumn Header="Multiplier" Binding="{Binding Multiplier, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </GroupBox>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Service Type" FontWeight="SemiBold" />
                    <ComboBox x:Name="ServiceTypeBox" Height="28" SelectionChanged="ServiceTypeBox_SelectionChanged"/>
                </StackPanel>

                <GroupBox Header="Room Defaults" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <TextBlock Text="New Room Defaults" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="180" Margin="0,0,10,0">
                                <TextBlock Text="Room Type" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomTypeBox" Height="26" ItemsSource="{StaticResource RoomTypeOptions}"/>
                            </StackPanel>
                            <StackPanel Width="180" Margin="0,0,10,0">
                                <TextBlock Text="Level" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomLevelBox" Height="26" ItemsSource="{StaticResource LevelOptions}"/>
                            </StackPanel>
                            <StackPanel Width="90" Margin="0,0,10,0">
                                <TextBlock Text="Size" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomSizeBox" Height="26" ItemsSource="{StaticResource RoomSizeOptions}"/>
                            </StackPanel>
                            <StackPanel Width="120">
                                <TextBlock Text="Complexity" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomComplexityBox" Height="26" ItemsSource="{StaticResource ComplexityOptions}"/>
                            </StackPanel>
                        </WrapPanel>

                        <TextBlock Text="Room Type Standards" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="320"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Room Type" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Size" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Time (min)" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Complexity" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="Frequency" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Bathroom (Full)"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="1" Grid.Column="2" x:Name="RoomBathroomFullMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="1" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Bathroom (Half)"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="2" Grid.Column="2" x:Name="RoomBathroomHalfMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="2" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Bathroom (Master - 2 sinks, glass/stone shower)"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="3" Grid.Column="2" x:Name="RoomBathroomMasterMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="3" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="3" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Bedroom"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="4" Grid.Column="2" x:Name="RoomBedroomMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="4" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="4" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Bedroom (Master)"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="5" Grid.Column="2" x:Name="RoomBedroomMasterMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="5" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="5" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Dining Room"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="6" Grid.Column="2" x:Name="RoomDiningRoomMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="6" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="6" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Entry"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="7" Grid.Column="2" x:Name="RoomEntryMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="7" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="7" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Family Room"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="8" Grid.Column="2" x:Name="RoomFamilyRoomMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="8" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="8" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Hallway"/>
                            <TextBlock Grid.Row="9" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="9" Grid.Column="2" x:Name="RoomHallwayMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="9" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="9" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" Text="Kitchen"/>
                            <TextBlock Grid.Row="10" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="10" Grid.Column="2" x:Name="RoomKitchenMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="10" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="10" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="11" Grid.Column="0" Text="Laundry"/>
                            <TextBlock Grid.Row="11" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="11" Grid.Column="2" x:Name="RoomLaundryMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="11" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="11" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="12" Grid.Column="0" Text="Living Room"/>
                            <TextBlock Grid.Row="12" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="12" Grid.Column="2" x:Name="RoomLivingRoomMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="12" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="12" Grid.Column="4" Text="Bi-weekly"/>

                            <TextBlock Grid.Row="13" Grid.Column="0" Text="Office"/>
                            <TextBlock Grid.Row="13" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="13" Grid.Column="2" x:Name="RoomOfficeMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="13" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="13" Grid.Column="4" Text="Bi-weekly"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Sub-Item Defaults" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <TextBlock Text="New Sub-Item Defaults" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="220" Margin="0,0,10,0">
                                <TextBlock Text="Sub-Item Type" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultSubItemTypeBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120">
                                <TextBlock Text="Window Size" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultWindowSizeBox" Height="26" ItemsSource="{StaticResource WindowSizeOptions}"/>
                            </StackPanel>
                        </WrapPanel>

                        <TextBlock Text="Sub-Item Standards" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="320"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Sub-Item" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Size" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Time (min)" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Complexity" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Ceiling Fan"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="1" Grid.Column="2" x:Name="SubItemCeilingFanMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Fridge"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="2" Grid.Column="2" x:Name="SubItemFridgeMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Mirror +1"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="3" Grid.Column="2" x:Name="SubItemMirrorMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="3" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Oven"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="4" Grid.Column="2" x:Name="SubItemOvenMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="4" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Shower: Discount (no glass)"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="5" Grid.Column="2" x:Name="SubItemShowerNoGlassMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="5" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Shower: Discount (no stone/tile)"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="6" Grid.Column="2" x:Name="SubItemShowerNoStoneMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="6" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Sink: Discount 1"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="7" Grid.Column="2" x:Name="SubItemSinkDiscountMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="7" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Stove Top (Gas)"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="8" Grid.Column="2" x:Name="SubItemStoveTopGasMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="8" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Tub / Jacuzzi Tub"/>
                            <TextBlock Grid.Row="9" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="9" Grid.Column="2" x:Name="SubItemTubMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="9" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" Text="Window (1 pane, inside only, 1st story)"/>
                            <TextBlock Grid.Row="10" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="10" Grid.Column="2" x:Name="SubItemWindowInsideFirstMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="10" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="11" Grid.Column="0" Text="Window (1 pane, outside only, 1st story)"/>
                            <TextBlock Grid.Row="11" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="11" Grid.Column="2" x:Name="SubItemWindowOutsideFirstMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="11" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="12" Grid.Column="0" Text="Window (1 pane, inside only, 2nd story)"/>
                            <TextBlock Grid.Row="12" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="12" Grid.Column="2" x:Name="SubItemWindowInsideSecondMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="12" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="13" Grid.Column="0" Text="Window (1 pane, outside only, 2nd story)"/>
                            <TextBlock Grid.Row="13" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="13" Grid.Column="2" x:Name="SubItemWindowOutsideSecondMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="13" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="14" Grid.Column="0" Text="Window Tract"/>
                            <TextBlock Grid.Row="14" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="14" Grid.Column="2" x:Name="SubItemWindowTrackMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="14" Grid.Column="3" Text="Standard"/>

                            <TextBlock Grid.Row="15" Grid.Column="0" Text="Window: Standard (2 panes)"/>
                            <TextBlock Grid.Row="15" Grid.Column="1" Text="M"/>
                            <TextBox Grid.Row="15" Grid.Column="2" x:Name="SubItemWindowStandardMinutesBox" Height="24"/>
                            <TextBlock Grid.Row="15" Grid.Column="3" Text="Standard"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Labor Standards" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <TextBlock Text="Size Standards" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Size" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Multiplier" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Definition" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="S"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="SizeSmallMultiplierBox" Height="24"/>
                            <TextBox Grid.Row="1" Grid.Column="2" x:Name="SizeSmallDefinitionBox" Height="24"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="M"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="SizeMediumMultiplierBox" Height="24"/>
                            <TextBox Grid.Row="2" Grid.Column="2" x:Name="SizeMediumDefinitionBox" Height="24"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="L"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="SizeLargeMultiplierBox" Height="24"/>
                            <TextBox Grid.Row="3" Grid.Column="2" x:Name="SizeLargeDefinitionBox" Height="24"/>
                        </Grid>

                        <TextBlock Text="Complexity Standards" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Level" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Multiplier" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Definition" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Easy"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="Complexity1MultiplierBox" Height="24"/>
                            <TextBox Grid.Row="1" Grid.Column="2" x:Name="Complexity1DefinitionBox" Height="24"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Medium"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="Complexity2MultiplierBox" Height="24"/>
                            <TextBox Grid.Row="2" Grid.Column="2" x:Name="Complexity2DefinitionBox" Height="24"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Hard"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="Complexity3MultiplierBox" Height="24"/>
                            <TextBox Grid.Row="3" Grid.Column="2" x:Name="Complexity3DefinitionBox" Height="24"/>
                        </Grid>

                    </StackPanel>
                </GroupBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset to Default" Width="130" Margin="0,0,8,0" Click="ResetToDefault_Click" />
                    <Button Content="Save" Width="90" Margin="0,0,8,0" Click="Save_Click" />
                    <Button Content="Close" Width="90" Click="Close_Click" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
