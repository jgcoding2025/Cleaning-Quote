<Window x:Class="Cleaning_Quote.ServiceTypeSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Service Type Defaults" Height="820" Width="720" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <x:Array x:Key="RoomTypeOptions" Type="{x:Type sys:String}">
            <sys:String>Bathroom (Full)</sys:String>
            <sys:String>Bathroom (Half)</sys:String>
            <sys:String>Bathroom (Master - 2 sinks, glass/stone shower)</sys:String>
            <sys:String>Bedroom</sys:String>
            <sys:String>Bedroom (Master)</sys:String>
            <sys:String>Kitchen</sys:String>
            <sys:String>Living Room</sys:String>
            <sys:String>Dining Room</sys:String>
            <sys:String>Office</sys:String>
            <sys:String>Laundry</sys:String>
            <sys:String>Family Room</sys:String>
            <sys:String>Entry</sys:String>
            <sys:String>Hallway</sys:String>
            <sys:String>Garage</sys:String>
            <sys:String>Other</sys:String>
        </x:Array>
        <x:Array x:Key="LevelOptions" Type="{x:Type sys:String}">
            <sys:String>Basement</sys:String>
            <sys:String>Main Floor (1)</sys:String>
            <sys:String>Upstairs (2)</sys:String>
            <sys:String>Floor 3</sys:String>
            <sys:String>Floor 4</sys:String>
            <sys:String>Floor 5</sys:String>
        </x:Array>
        <x:Array x:Key="RoomSizeOptions" Type="{x:Type sys:String}">
            <sys:String>S</sys:String>
            <sys:String>M</sys:String>
            <sys:String>L</sys:String>
        </x:Array>
        <x:Array x:Key="ComplexityOptions" Type="{x:Type sys:Int32}">
            <sys:Int32>1</sys:Int32>
            <sys:Int32>2</sys:Int32>
            <sys:Int32>3</sys:Int32>
        </x:Array>
        <x:Array x:Key="SubItemTypeOptions" Type="{x:Type sys:String}">
            <sys:String>Ceiling Fan</sys:String>
            <sys:String>Fridge</sys:String>
            <sys:String>Mirror +1</sys:String>
            <sys:String>Oven</sys:String>
            <sys:String>Shower: Discount (no glass)</sys:String>
            <sys:String>Shower: Discount (no stone/tile)</sys:String>
            <sys:String>Sink: Discount 1</sys:String>
            <sys:String>Stove Top (Gas)</sys:String>
            <sys:String>Tub / Jacuzzi Tub</sys:String>
            <sys:String>Window (1 pane, inside only, 1st story)</sys:String>
            <sys:String>Window (1 pane, outside only, 1st story)</sys:String>
            <sys:String>Window (1 pane, inside only, 2nd story)</sys:String>
            <sys:String>Window (1 pane, outside only, 2nd story)</sys:String>
            <sys:String>Window Tract</sys:String>
            <sys:String>Window: Standard (2 panes)</sys:String>
        </x:Array>
        <x:Array x:Key="WindowSizeOptions" Type="{x:Type sys:String}">
            <sys:String>S</sys:String>
            <sys:String>M</sys:String>
            <sys:String>L</sys:String>
        </x:Array>
    </Window.Resources>
    <DockPanel Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Service Type" FontWeight="SemiBold" />
                <ComboBox x:Name="ServiceTypeBox" Height="28" SelectionChanged="ServiceTypeBox_SelectionChanged">
                    <ComboBoxItem>Standard Clean</ComboBoxItem>
                    <ComboBoxItem>Initial Clean (Standard Clean Items Only)</ComboBoxItem>
                    <ComboBoxItem>Deep Clean (one-time)</ComboBoxItem>
                    <ComboBoxItem>Deep Clean (post initial clean)</ComboBoxItem>
                    <ComboBoxItem>Deep Clean (Semi-Annual)</ComboBoxItem>
                    <ComboBoxItem>Deep Clean (Annual)</ComboBoxItem>
                    <ComboBoxItem>Light Clean (dusting and floors)</ComboBoxItem>
                    <ComboBoxItem>Move In/Out Clean</ComboBoxItem>
                    <ComboBoxItem>Pressure Washing</ComboBoxItem>
                    <ComboBoxItem>Organizing</ComboBoxItem>
                </ComboBox>
            </StackPanel>

                <GroupBox Header="Room Defaults" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <WrapPanel>
                            <StackPanel Width="180" Margin="0,0,10,0">
                                <TextBlock Text="Room Type" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomTypeBox" Height="26" ItemsSource="{StaticResource RoomTypeOptions}"/>
                            </StackPanel>
                            <StackPanel Width="180" Margin="0,0,10,0">
                                <TextBlock Text="Level" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomLevelBox" Height="26" ItemsSource="{StaticResource LevelOptions}"/>
                            </StackPanel>
                            <StackPanel Width="90" Margin="0,0,10,0">
                                <TextBlock Text="Size" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomSizeBox" Height="26" ItemsSource="{StaticResource RoomSizeOptions}"/>
                            </StackPanel>
                            <StackPanel Width="120">
                                <TextBlock Text="Complexity" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultRoomComplexityBox" Height="26" ItemsSource="{StaticResource ComplexityOptions}"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Sub-Item Defaults" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <WrapPanel>
                            <StackPanel Width="220" Margin="0,0,10,0">
                                <TextBlock Text="Sub-Item Type" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultSubItemTypeBox" Height="26" ItemsSource="{StaticResource SubItemTypeOptions}"/>
                            </StackPanel>
                            <StackPanel Width="120">
                                <TextBlock Text="Window Size" FontWeight="SemiBold"/>
                                <ComboBox x:Name="DefaultWindowSizeBox" Height="26" ItemsSource="{StaticResource WindowSizeOptions}"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Default Pricing Settings" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="160" Margin="0,0,10,0">
                                <TextBlock Text="Sq Ft per Labor Hour" FontWeight="SemiBold"/>
                                <TextBox x:Name="SqFtPerLaborHourBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Small Sq Ft" FontWeight="SemiBold"/>
                                <TextBox x:Name="SizeSmallSqFtBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Medium Sq Ft" FontWeight="SemiBold"/>
                                <TextBox x:Name="SizeMediumSqFtBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Large Sq Ft" FontWeight="SemiBold"/>
                                <TextBox x:Name="SizeLargeSqFtBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Complexity 1x" FontWeight="SemiBold"/>
                                <TextBox x:Name="Complexity1MultiplierBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Complexity 2x" FontWeight="SemiBold"/>
                                <TextBox x:Name="Complexity2MultiplierBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Complexity 3x" FontWeight="SemiBold"/>
                                <TextBox x:Name="Complexity3MultiplierBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>

                        <WrapPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Glass Shower Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="FullGlassShowerHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Glass Shower Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="FullGlassShowerComplexityBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Pebble Floor Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="PebbleStoneFloorHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Pebble Floor Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="PebbleStoneFloorComplexityBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Fridge Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="FridgeHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Fridge Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="FridgeComplexityBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Oven Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="OvenHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="120" Margin="0,0,10,0">
                                <TextBlock Text="Oven Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="OvenComplexityBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Sub-Item Labor Defaults" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Ceiling Fan Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="CeilingFanHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Ceiling Fan Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="CeilingFanComplexityBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                        <WrapPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Small Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowSmallHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Medium Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowMediumHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Large Hours" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowLargeHoursBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Complexity" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowComplexityBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Quote Form Rates" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="First Clean Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="FirstCleanRateBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="First Clean Minimum" FontWeight="SemiBold"/>
                                <TextBox x:Name="FirstCleanMinimumBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Deep Clean Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="DeepCleanRateBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Deep Clean Minimum" FontWeight="SemiBold"/>
                                <TextBox x:Name="DeepCleanMinimumBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                        <WrapPanel Margin="0,0,0,10">
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Maintenance Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="MaintenanceRateBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Maintenance Minimum" FontWeight="SemiBold"/>
                                <TextBox x:Name="MaintenanceMinimumBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="160" Margin="0,0,10,0">
                                <TextBlock Text="One-Time Deep Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="OneTimeDeepCleanRateBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="160" Margin="0,0,10,0">
                                <TextBlock Text="One-Time Deep Min" FontWeight="SemiBold"/>
                                <TextBox x:Name="OneTimeDeepCleanMinimumBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                        <WrapPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Inside Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowInsideRateBox" Height="26"/>
                            </StackPanel>
                            <StackPanel Width="140" Margin="0,0,10,0">
                                <TextBlock Text="Window Outside Rate" FontWeight="SemiBold"/>
                                <TextBox x:Name="WindowOutsideRateBox" Height="26"/>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Complexity Definitions" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Complexity 1" FontWeight="SemiBold" />
                            <TextBox x:Name="Complexity1DefinitionBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Complexity 2" FontWeight="SemiBold" />
                            <TextBox x:Name="Complexity2DefinitionBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Complexity 3" FontWeight="SemiBold" />
                            <TextBox x:Name="Complexity3DefinitionBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Standards Reference" Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <TextBlock Text="Default Service Type Standards" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="240"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Service Type" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Size" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="$/Sq.Ft." FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Complexity" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="Multiplier" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Standard Clean"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="M"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="$0.12"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="1" Grid.Column="4" Text="1.00"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Initial Clean (Standard Clean Items Only)"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="M"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="$0.16"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="2" Grid.Column="4" Text="1.33"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Deep Clean (one-time)"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="M"/>
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="$0.30"/>
                            <TextBlock Grid.Row="3" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="3" Grid.Column="4" Text="2.50"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Deep Clean (post initial clean)"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="M"/>
                            <TextBlock Grid.Row="4" Grid.Column="2" Text="$0.20"/>
                            <TextBlock Grid.Row="4" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="4" Grid.Column="4" Text="1.67"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Deep Clean (Semi-Annual)"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="M"/>
                            <TextBlock Grid.Row="5" Grid.Column="2" Text="$0.22"/>
                            <TextBlock Grid.Row="5" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="5" Grid.Column="4" Text="1.83"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Deep Clean (Annual)"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="M"/>
                            <TextBlock Grid.Row="6" Grid.Column="2" Text="$0.22"/>
                            <TextBlock Grid.Row="6" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="6" Grid.Column="4" Text="1.83"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Light Clean (dusting and floors)"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="M"/>
                            <TextBlock Grid.Row="7" Grid.Column="2" Text="$0.06"/>
                            <TextBlock Grid.Row="7" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="7" Grid.Column="4" Text="0.50"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Move In/Out Clean"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Text="M"/>
                            <TextBlock Grid.Row="8" Grid.Column="2" Text="$0.32"/>
                            <TextBlock Grid.Row="8" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="8" Grid.Column="4" Text="2.67"/>

                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Pressure Washing"/>
                            <TextBlock Grid.Row="9" Grid.Column="1" Text="M"/>
                            <TextBlock Grid.Row="9" Grid.Column="2" Text="NA"/>
                            <TextBlock Grid.Row="9" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="9" Grid.Column="4" Text="NA"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" Text="Organizing"/>
                            <TextBlock Grid.Row="10" Grid.Column="1" Text="M"/>
                            <TextBlock Grid.Row="10" Grid.Column="2" Text="NA"/>
                            <TextBlock Grid.Row="10" Grid.Column="3" Text="Standard"/>
                            <TextBlock Grid.Row="10" Grid.Column="4" Text="NA"/>
                        </Grid>

                        <WrapPanel Margin="0,0,0,12">
                            <StackPanel Width="280" Margin="0,0,10,0">
                                <TextBlock Text="Complexity" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Level" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Multiplier" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Definition" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Easy"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="0.75"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Light use with minimal buildup"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Medium"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="1.00"/>
                                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Moderate use with visible buildup (Average)"/>
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Hard"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="1.25"/>
                                    <TextBlock Grid.Row="3" Grid.Column="2" Text="Heavy use with significant buildup"/>
                                </Grid>
                            </StackPanel>
                            <StackPanel Width="240">
                                <TextBlock Text="Sizes" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Size" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Multiplier" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Definition" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="S"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="0.9"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Small"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="M"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="1"/>
                                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Medium (average)"/>
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="L"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="1.1"/>
                                    <TextBlock Grid.Row="3" Grid.Column="2" Text="Large"/>
                                </Grid>
                            </StackPanel>
                        </WrapPanel>

                        <TextBlock Text="Default Room Type Standards" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="320"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Room Type" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Size" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Time (min)" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Complexity" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="Frequency" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Bathroom (Full)"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="M"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="60"/>
